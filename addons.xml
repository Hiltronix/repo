<?xml version="1.0" encoding="UTF-8"?>
<addons>
<addon id="plugin.program.advsettings"
	name="My Advanced Settings"
	version="1.0.0"
	provider-name="Hiltronix">
	<requires>
		<import addon="xbmc.python" version="2.1.0"/>
	</requires>
	<extension point="xbmc.python.pluginsource" library="default.py">
		<provides>executable</provides>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>Advanced Settings for Kodi/XBMC</summary>
		<description>View and change advanced settings that aren't easily accessible in Kodi/XBMC.</description>
		<platform>all</platform>
	</extension>
</addon>

<addon id="plugin.video.sickrage"
	name="SickRage"
	version="1.1.3"
	provider-name="Hiltronix (Orig. Work by Zach Moore)">
	<requires>
		<import addon="xbmc.python" version="2.1.0"/>
		<import addon="script.module.metahandler" version="2.5.1" />
		<import addon="script.module.addon.common" version="2.0.0" />
	</requires>
	<extension point="xbmc.python.pluginsource" library="default.py">
		<provides>video</provides>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>SickRage Interface for Kodi/XBMC</summary>
		<description>View and control SickRage from within Kodi/XBMC.</description>
		<platform>all</platform>
	</extension>
</addon>

<addon id="repository.Hiltronix" name="Hiltronix Repository" version="1.0.1" provider-name="Hiltronix">
	<extension point="xbmc.addon.repository" name="Hiltronix Repository">
		<info compressed="false">https://github.com/Hiltronix/repo/raw/master/addons.xml</info>
		<checksum>https://github.com/Hiltronix/repo/raw/master/addons.xml.md5</checksum>
		<datadir zip="true">https://github.com/Hiltronix/repo/raw/master/zips/</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>Install Addons from Hiltronix Repository</summary>
		<description>Download and install addons from Hiltronix.</description>
		<disclaimer>
			The Software is provided "as is" without warranty of any kind, either express or implied, including without limitation any implied warranties of condition, uninterrupted use, merchantability, fitness for a particular purpose, or non-infringement.
			Hiltronix and anyone associated with these addons will not be held responsible for the use or misuse of this software if considered illegal in your country.  Use the this software is at your own risk.
		</disclaimer>
		<platform>all</platform>
	</extension>
</addon>
</addons>
