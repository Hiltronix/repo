<addon id="context.lookuponimdb.dialog"
	name="Lookup on IMDb"
	version="1.0.0"
	provider-name="Hiltronix">
	<requires>
		<import addon="xbmc.python" version="2.20.0"/>
	</requires>
	<extension point="kodi.context.item" library="addon.py">
		<item>
			<label>Lookup on IMDb</label>
			<!-- <visible>!IsEmpty(ListItem.Label) | !IsEmpty(ListItem.Title)</visible> -->
			<visible>true</visible>
			<!-- <parent>kodi.core.manage</parent> -->
		</item>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>Lookup on IMDb</summary>
		<description>Lookup the selected or manually entered video title, episode or cast member, on the IMDb.</description>
		<platform>all</platform>
		<language>en</language>
		<license>GNU GENERAL PUBLIC LICENSE. Version 2, June 1991</license>
		<email>hiltronix@gmail.com</email>
	</extension>
</addon>

